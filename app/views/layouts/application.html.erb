<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification"></div>
        <p class="notice"><%= notice %></p>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification"></div>
        <p class="alert"><%= alert %></p>
    <% end %>
    <nav class="navbar is-info">
      <div class="navbar-brand">
      <%= link_to root_path, class: "navbar_item" do %>
        <h1 class="title is-5">Clubhouse</h1>
      <% end %>
      <div class="navbar-burger burger" data-target="navbarExample">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>

    <div id="navbarExample" class="navbar-menu">
      <div class="navbar-end">
        <div class="field is-grouped">
          <p class="control">
            <%= link_to 'New Post', new_post_path, class: "button is-info is-inverted" %>
          </p>
        </div>
      </div>
    </div>

    </nav>



    <%= yield %>
  </body>
</html>
